= content_for :js_init do
  :javascript
    $(document).ready(function(){
      UrbanHelpline.Admin.DocumentEditor.init()
    })

- if document.persisted?
  - form_url = admin_document_path(document)
- else
  - form_url = admin_documents_path


= simple_form_for(document, url: form_url, html: { class: "form-horizontal" }) do |f|

  = f.input :name,        as: :string, input_html: { rows: 5, class: "span4" }
  = f.input :address,     as: :text,   input_html: { rows: 4, class: "field span4" }
  = f.input :notes,       as: :text,   input_html: { rows: 4, class: "field span4" }

  .form-actions
    = f.submit "Save", :class => "btn btn-primary"
    or
    = link_to "Cancel", :back, :class => "btn"
