.navbar
  .navbar-inner
    = link_to "Urban Helpline", admin_path, class: "brand"
    %ul.nav
      %li.divider-vertical

      - if is_admin? || is_operator?
        %li
          = link_to "Handle calls", admin_calls_handle_path

      - if is_admin?

        %li{class: admin_documents_active?(params[:controller]) }
          =link_to  "Documents", admin_documents_path

        %li{class: admin_calls_active?(params[:controller]) }
          = link_to "Calls", admin_users_path

        %li{class: admin_users_active?(params[:controller]) }
          = link_to "Users", admin_users_path


    %ul{class: "nav pull-right"}
      - if current_user
        %li
          = link_to current_user.email, edit_admin_user_path(current_user)
        %li.divider-vertical
        %li
          = link_to "Logout", destroy_user_session_path, :method => :delete
      - else
        %li
          = link_to "Login", new_user_session_path
